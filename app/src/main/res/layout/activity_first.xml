<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebecf1">

    <ScrollView
        android:layout_above="@id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="6dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/noInternetIV"
                    android:visibility="gone"
                    android:src="@drawable/no_internet"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>
            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="1"
                app:sliderStartAutoCycle="true" />

            <TextView
                android:id="@+id/noInternet"
                android:text="No Internet"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:id="@+id/filesCD"
            app:cardCornerRadius="6dp"
            android:backgroundTint="#58b368"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    app:civ_border_color="@color/green"
                    app:civ_border_width="4dp"
                    app:civ_circle_background_color="@color/green"
                    android:src="@drawable/brush"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="@string/file_cleaner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/webwhatsappCD"
            app:cardCornerRadius="6dp"
            android:layout_margin="5dp"
            android:backgroundTint="#76dbd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    app:civ_border_color="@color/green"
                    app:civ_border_width="4dp"
                    app:civ_circle_background_color="@color/green"
                    android:src="@drawable/webwhatsapp"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="Web WhatsApp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/statussaver"
            app:cardCornerRadius="6dp"
            android:layout_margin="5dp"
            android:backgroundTint="#91d18b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    app:civ_border_color="@color/green"
                    app:civ_border_width="4dp"
                    app:civ_circle_background_color="@color/green"
                    android:src="@drawable/status_saver"
                    android:layout_marginEnd="10dp"/>

                <TextView

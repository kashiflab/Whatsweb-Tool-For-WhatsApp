                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="Status Saver"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

